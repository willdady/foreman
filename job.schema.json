{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "Unique identifier for the job"
        },
        "image": {
            "type": "string",
            "description": "Docker image to use for the job"
        },
        "port": {
            "type": "integer",
            "description": "Port to expose on the container"
        },
        "command": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Command to run in the container"
        },
        "body": {
            "description": "Body of the job"
        },
        "env": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            },
            "description": "Environment variables for the job"
        },
        "callbackUrl": {
            "type": "string",
            "format": "uri",
            "description": "Callback URL for the job"
        },
        "alwaysPull": {
            "type": "boolean",
            "description": "Whether to always pull the Docker image before creating a container"
        }
    },
    "required": ["id", "image", "port", "body", "callbackUrl", "alwaysPull"],
    "additionalProperties": false
}
